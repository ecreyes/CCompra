<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.example.ecreyes.ccompra.TiendasFragment"
    android:orientation="vertical">


    <EditText
        android:id="@+id/search_text"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textCapWords"
        android:text="" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        tools:context=".TiendasFragment"
        tools:listitem="@layout/fragment_tiendas" />

    <ImageView
        android:id="@+id/search_btn"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/search_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/ic_search_button" />


</RelativeLayout>