<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.example.ecreyes.ccompra.TiendasFragment"
    android:orientation="vertical">


    <EditText
        android:id="@+id/search_text"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_editbox_gray"
        android:ems="10"
        android:hint="Buscar..."
        android:inputType="textCapWords"
        android:paddingLeft="45dp"
        android:text="" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        tools:context=".TiendasFragment"
        tools:listitem="@layout/fragment_tiendas" />

    <ImageView
        android:id="@+id/search_btn"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/search_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="3dp"
        app:srcCompat="@drawable/ic_search_button" />

    <ImageButton
        android:id="@+id/filter_btn"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/button_selector"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_filter_btn" />


</RelativeLayout>