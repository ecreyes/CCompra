<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaTiendaFragment"
    android:id="@+id/VistaTienda">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_general"
        >

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_gradient">

                <ImageView
                    android:id="@+id/imagen_tienda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:adjustViewBounds="true"

                    android:maxWidth="40dp"
                    android:src="@drawable/default_image2"
                    tools:cropToPadding="false" />

                <ImageView
                    android:id="@+id/imagen_avatar"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imagen_tienda"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:maxWidth="42dp"
                    android:maxHeight="42dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/user" />


                <TextView
                    android:id="@+id/titulo_tienda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imagen_tienda"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/imagen_avatar"
                    android:text="Titulo Tienda"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="#ffff"/>

                <TextView
                    android:id="@+id/lugar_tienda"
                    android:layout_width="293dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/titulo_tienda"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="-4dp"
                    android:layout_toRightOf="@id/imagen_avatar"
                    android:text="Ubicación" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/text_dueno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dueño(a): "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dueno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="70dp"
                    android:text="Juan Perez" />


                <TextView
                    android:id="@+id/text_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_dueno"
                    android:text="Descripción:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descripcion_tienda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_descripcion"
                    android:layout_marginBottom="10sp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur viverra, velit sit amet consequat tincidunt." />

                <Button
                    android:id="@+id/btn_abierto"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/descripcion_tienda"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dip"
                    android:background="@drawable/button_selector"
                    android:clickable="false"
                    android:text="Abierta"
                    android:textAllCaps="false"

                    android:textColor="#FFFF"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/separador1"
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    android:layout_below="@+id/btn_abierto"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:background="#369e97" />

                <ImageView
                    android:id="@+id/imagen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separador1"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_image" />

                <ImageView
                    android:id="@+id/imagen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separador1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/imagen1"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_image" />

                <ImageView
                    android:id="@+id/imagen3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separador1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toRightOf="@id/imagen2"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_image" />


            </RelativeLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>