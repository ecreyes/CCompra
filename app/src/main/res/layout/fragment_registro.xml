<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    tools:context=".RegistroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="214dp"
            android:layout_height="136dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_round" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_margin="20dp"
            android:background="@drawable/linearlayout_shape"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_editbox"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Ingresa tu Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="#FFFF"
                android:textColorHighlight="#FFFF"
                android:textColorHint="#FFFF" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_editbox"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:hint="Ingresa tu ContraseÃ±a"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#FFFF"
                android:textColorHighlight="#FFFF"
                android:textColorHint="#FFFF" />

            <Button
                android:id="@+id/btn_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_shape"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:textColor="#FFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/link_volver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:linksClickable="true"
                android:text="Volver"
                android:textColor="#FFFF"
                android:textSize="16dip"
                android:textStyle="bold"
                android:visibility="invisible" />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>